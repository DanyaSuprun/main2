using System;

class Program
{
    static void Main()
    {
        int[,] arr = {
            { 1, 2, 3 },
            { 4, 5, 6 },
            { 7, 8, 9 }
        };

        int sum = 0;
        int size = arr.GetLength(0);

        for (int i = 0; i < size; i++)
        {
            sum += arr[i, i]; 
        }

        Console.WriteLine("Сума елементів по головній діагоналі: " + sum);
    }
}
