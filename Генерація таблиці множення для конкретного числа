
using System;


    
      
        Console.Write("Введіть число для генерації таблиці множення: ");
        int number = int.Parse(Console.ReadLine());

       
        Console.WriteLine($"Таблиця множення для числа {number}:");

       
        for (int i = 1; i <= 15; i++)
        {
            int result = number * i;
            Console.WriteLine($"{number} * {i} = {result}");
        }
    
